[
  {
    "logConfiguration": {
      "logDriver": "awslogs",
      "secretOptions": null,
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "eu-west-2",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "name": "ips-services",
    "image": "${services_image}",
    "cpu": 0,
    "memory": null,
    "memoryReservation": null,
    "essential": true,
    "environment": [
      {
        "name": "DB_NAME",
        "value": "${db_name}"
      },
      {
        "name": "DB_SERVER",
        "value": "${db_server}"
      },
      {
        "name": "DB_USER_NAME",
        "value": "${db_user_name}"
      }
    ],
    "secrets": [
      {
        "valueFrom": "${db_password}",
        "name": "DB_PASSWORD"
      }
    ],
    "portMappings": [
      {
        "hostPort": 5000,
        "protocol": "tcp",
        "containerPort": 5000
      }
    ]
  }
]